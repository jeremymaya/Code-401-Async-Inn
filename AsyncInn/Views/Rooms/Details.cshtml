@model AsyncInn.Models.ViewModels.RoomAmenitiesListVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Layout)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.Layout)
        </dd>
    </dl>
</div>
<div>
    <h4>Roome Amenities</h4>
    <table>
        <tbody>
            @foreach (var item in Model.RoomAmenities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amenities.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Amenities.ID">Amenity Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Room.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
